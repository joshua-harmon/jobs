// Applicant email template
doctype html

head
  link(rel="stylesheet", href="style.css", data-inline)

- var middle = middleInitial.length > 0 ? middleInitial + ' ': '';

body
  h1 #{firstName} #{middle}#{lastName}

  p(class='address') #{streetAddress}
  p(class='address') #{city}, #{state}
  p(class='address') #{zip}
  p(class='address') #{phone}
  p(class='address') #{email}

  hr

  h2 Personal Information

  p(class='bold') Are you authorized to work in the United States?
  if entitledToWork
    p Yes
      span(class='true') &nbsp;&#10003;
  else
    p No
      span(class='false') &nbsp;&times;
    
  p(class='bold') Are you age 17 or younger?
  if youngerThan18
    p Yes
      span(class='true') &nbsp;&#10003;
  else
    p No
      span(class='false') &nbsp;&times;

  p(class='bold') Have you ever been convicted of a felony?
  if convictedFelon
    p Yes
      span(class='true') &nbsp;&#10003;
    p(class='bold') Explanation:
    p #{felonyExplanation}
  else
    p No
      span(class='false') &nbsp;&times;

  p(class='bold') Are you currently on probation?
  if probation
    p Yes
      span(class='true') &nbsp;&#10003;
    p(class='bold') Until:
    p #{probationEnd}
  else
    p No
      span(class='false') &nbsp;&times;

  p(class='bold') Military Service
  if militaryService
    p Yes
      span(class='true') &nbsp;&#10003;
    p(class='bold') Branch:
    p #{branch}
  else
    p No
      span(class='false') &nbsp;&times;

  p(class='bold')
    | Do you have any physical limitations or allergies that would prevent 
    | you from doing this job?
    if physicalLimitations
      p Yes
        span(class='true') &nbsp;&#10003;
    else
      p No
        span(class='false') &nbsp;&times;

  p(class='bold') Have you ever applied with this company before?
  if everApplied
    p Yes
      span(class='true') &nbsp;&#10003;
  else
    p No
      span(class='false') &nbsp;&times;

  p(class='bold') Were you previously employed by Natural Essentials Inc?
  if naturalEssentialsPreviously
    p Yes
      span(class='true') &nbsp;&#10003;
  else
    p No
      span(class='false') &nbsp;&times;

  p(class='bold') Which position are you applying for?
  p #{position}

  p(class='bold') How did you hear about the position?
  p #{referral}

  p(class='bold') Expected salary/rate:
  p #{expectedRate}

  p(class='bold') Date Available:
  p #{dateAvailable}

  hr

  h2 Experience

  h3 Current (or most recent) Employer

  p(class='bold') #{employerWork1}
  p(class='address') #{streetWork1}
  p(class='address') #{cityWork1}, #{stateWork1}
  p(class='address') #{zipWork1}
  p(class='address') #{phoneWork1}

  p(class='bold') Position:
  p #{positionWork1}

  p(class='bold') Pay rate:
  p #{payWork1}

  p(class='bold') Supervisor:
  p #{supervisorWork1}

  p(class='bold') May we contact?
  if contactWork1
    p Yes
      span(class='true') &nbsp;&#10003;
  else
    p No
      span(class='false') &nbsp;&times;

  p(class='bold') Start date:
  p #{startWork1}

  p(class='bold') End date:
  p #{endWork1}

  p(class='bold') Reason for leaving:
  p #{reasonWork1}

  h3 Employer 2

  p(class='bold') #{employerWork2}
  p(class='address') #{streetWork2}
  p(class='address') #{cityWork2}, #{stateWork2}
  p(class='address') #{zipWork2}
  p(class='address') #{phoneWork2}

  p(class='bold') Position:
  p #{positionWork2}

  p(class='bold') Pay rate:
  p #{payWork2}

  p(class='bold') Supervisor:
  p #{supervisorWork2}

  p(class='bold') May we contact?
  if contactWork2
    p Yes
      span(class='true') &nbsp;&#10003;
  else
    p No
      span(class='false') &nbsp;&times;

  p(class='bold') Start date:
  p #{startWork2}

  p(class='bold') End date:
  p #{endWork2}

  p(class='bold') Reason for leaving:
  p #{reasonWork2}

  h3 Employer 3

  p(class='bold') #{employerWork3}
  p(class='address') #{streetWork3}
  p(class='address') #{cityWork3}, #{stateWork3}
  p(class='address') #{zipWork3}
  p(class='address') #{phoneWork3}

  p(class='bold') Position:
  p #{positionWork3}

  p(class='bold') Pay rate:
  p #{payWork3}

  p(class='bold') Supervisor:
  p #{supervisorWork3}

  p(class='bold') May we contact?
  if contactWork3
    p Yes
      span(class='true') &nbsp;&#10003;
  else
    p No
      span(class='false') &nbsp;&times;

  p(class='bold') Start date:
  p #{startWork3}

  p(class='bold') End date:
  p #{endWork3}

  p(class='bold') Reason for leaving:
  p #{reasonWork3}

  hr

  h2 Education

  h3 High School

  p #{highSchool}

  p(class='bold') Year completed:
  p #{highSchoolYrCompleted}

  p(class='bold') Degree:
  p #{highSchoolDegree}

  p(class='bold') Major:
  p #{highSchoolMajor}


  h3 College or University

  p #{college}

  p(class='bold') Year completed:
  p #{collegeYrCompleted}

  p(class='bold') Degree:
  p #{collegeDegree}

  p(class='bold') Major:
  p #{collegeMajor}

  h3 Trade School

  p #{tradeSchool}

  p(class='bold') Year completed:
  p #{tradeSchoolYrCompleted}

  p(class='bold') Degree:
  p #{tradeSchoolDegree}

  p(class='bold') Major:
  p #{tradeSchoolMajor}

  h3 Other

  p #{other}

  p(class='bold') Year completed:
  p #{otherYrCompleted}

  p(class='bold') Degree:
  p #{otherDegree}

  p(class='bold') Major:
  p #{otherMajor}

  h3 Special Skills

  p #{specialSkills}

  hr

  h2 References

  p(class='bold') Reference 1
  p #{reference1}
  p #{reference1Phone}

  p(class='bold') Reference 2
  p #{reference2}
  p #{reference2Phone}

  p(class='bold') Reference 3
  p #{reference3}
  p #{reference3Phone}

